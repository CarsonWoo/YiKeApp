<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carson.yikeapp">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.carson.yikeapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>

        <activity
            android:name=".Views.StartActivity"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.ChangePasswordActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Views.RegisterActivity"
            android:label="注册"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Views.HomeActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Views.LoginActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Views.UserDetailActivity"
            android:label=""
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Views.ShopDetailActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Views.SettingActivity"
            android:label="设置"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Views.StoreDetailActivity"
            android:theme="@style/TransparentTheme" />
        <activity
            android:name=".Views.ResumeActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Views.ExpDetailActivity"
            android:theme="@style/TransparentTheme" />
        <activity
            android:name=".Views.ChatWindowActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/TransparentTheme" />
        <activity
            android:name=".Views.PublishExpActivity"
            android:theme="@style/TransparentTheme" />
        <activity
            android:name=".Views.PublishPartActivity"
            android:theme="@style/TransparentTheme" />
        <activity
            android:name=".Views.PublishDiaryActivity"
            android:theme="@style/TransparentTheme" />
        <activity
            android:name=".Views.PublishQuestionActivity"
            android:configChanges="keyboard"
            android:theme="@style/TransparentTheme" />
        <activity
            android:name=".Views.SearchActivity"
            android:theme="@style/TransparentTheme" />
        <activity
            android:name=".Views.CropPicActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Views.QuesDetailActivity"
            android:theme="@style/TransparentTheme" />
    </application>

</manifest>