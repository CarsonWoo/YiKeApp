<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:clickable="true"
        android:id="@+id/civ_discuss_rv_item_question_head"
        app:srcCompat="@drawable/ic_loader"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:focusable="true" />

    <com.example.carson.yikeapp.Views.ArchRivalTextView
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/civ_discuss_rv_item_question_head"
        android:hint="username"
        android:textColor="#000"
        android:id="@+id/artv_discuss_rv_item_question_name"
        android:textSize="17.6sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/civ_discuss_rv_item_question_head" />

    <TextView
        android:maxLines="2"
        android:layout_marginTop="6dp"
        android:textSize="13.6sp"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/civ_discuss_rv_item_question_head"
        android:layout_below="@id/artv_discuss_rv_item_question_name"
        android:id="@+id/tv_discuss_rv_item_question_text"
        android:layout_width="260dp"
        android:hint="question_text"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/civ_discuss_rv_item_question_head" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/civ_discuss_rv_item_question_head"
        android:layout_below="@id/tv_discuss_rv_item_question_text"
        android:textColor="#000"
        android:textSize="12.6sp"
        android:hint="134浏览"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_discuss_rv_item_question_view"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/civ_discuss_rv_item_question_head" />

    <TextView
        android:id="@+id/tv_discuss_rv_item_question_comment"
        android:textSize="12.6sp"
        android:layout_marginRight="14.45dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tv_discuss_rv_item_question_text"
        android:layout_alignParentEnd="true"
        android:hint="128评论"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:background="#31262525"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_discuss_rv_item_question_view"
        android:layout_toRightOf="@id/civ_discuss_rv_item_question_head"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/civ_discuss_rv_item_question_head" />

</RelativeLayout>