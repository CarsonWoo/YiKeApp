<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="10dp"
        android:id="@+id/civ_diary_head"
        app:srcCompat="@drawable/ic_loader"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <com.example.carson.yikeapp.Views.ArchRivalTextView
        android:id="@+id/artv_discuss_rv_item_diary_name"
        android:layout_toRightOf="@id/civ_diary_head"
        android:layout_margin="10dp"
        android:hint="username"
        android:textSize="17.6sp"
        android:textColor="#ab000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:maxLines="2"
        android:textSize="13.6sp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:layout_below="@id/artv_discuss_rv_item_diary_name"
        android:hint="#Beijing#哇，这里的风景超棒的！超级喜欢万里长城欸！但是就是雾霾太重。不过总的来"
        android:layout_marginLeft="90dp"
        android:id="@+id/tv_discuss_rv_item_diary_content"
        android:layout_width="260dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_discuss_rv_item_diary_show_all_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_discuss_rv_item_diary_content"
        android:textColor="#e26323"
        android:text="全文"
        android:visibility="invisible"
        android:clickable="true"
        android:textSize="13.6sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iv_discuss_rv_diary_photo"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="90dp"
        android:clickable="true"
        android:layout_below="@id/tv_discuss_rv_item_diary_content"
        android:src="#999"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp" />

    <ImageView
        android:id="@+id/iv_discuss_rv_diary_like"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_unlike"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:textColor="#6a464545"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@id/iv_discuss_rv_diary_photo"
        android:id="@+id/tv_discuss_rv_item_diary_view"
        android:hint="134浏览"
        android:textSize="12.6sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#a2bebebe"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_discuss_rv_diary_photo"
        android:layout_alignParentEnd="true"
        android:hint="2018-2-27"
        android:id="@+id/tv_discuss_rv_item_diary_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <View
        android:layout_marginLeft="90dp"
        android:background="#e7e4e4"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_discuss_rv_item_diary_date"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</RelativeLayout>