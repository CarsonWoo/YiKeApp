<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_button_style3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/iv2publish_exp"
            app:srcCompat="@drawable/ic_exp"
            android:layout_width="45dp"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/tv2publish_exp"
            android:textSize="15.6sp"
            android:textColor="@android:color/black"
            android:text="经验谈"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <View
        android:layout_marginLeft="5dp"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:background="#999999" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/iv2publish_partner"
            android:layout_marginTop="2dp"
            app:srcCompat="@drawable/ic_partner"
            android:layout_width="45dp"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/tv2publish_partner"
            android:textSize="15.6sp"
            android:textColor="@android:color/black"
            android:text="约伴游"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginLeft="5dp"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:background="#999999" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/iv2publish_ques"
            app:srcCompat="@drawable/ic_search"
            android:layout_width="45dp"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/tv2publish_ques"
            android:textSize="15.6sp"
            android:textColor="@android:color/black"
            android:text="问答说"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="5dp"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:background="#999999" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/iv2publish_diary"
            app:srcCompat="@drawable/ic_like_stroke"
            android:layout_width="45dp"
            android:layout_height="18dp" />
        <TextView
            android:id="@+id/tv2publish_diary"
            android:textSize="15.6sp"
            android:textColor="@android:color/black"
            android:text="游心得"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>