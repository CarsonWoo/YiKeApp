<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carson.yikeapp.Views.ChangePasswordActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_change_psw"
        app:navigationIcon="@drawable/ic_back_black"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        app:subtitle="返回">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/bg_underline"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ll1_change"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TextView
                android:textSize="15sp"
                android:text="请输入新密码    "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginBottom="5dp"
                android:id="@+id/et_change_pwd"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/ll2_change"
            android:orientation="horizontal"
            android:layout_below="@id/ll1_change"
            android:background="@drawable/bg_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:text="请再次输入    "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:id="@+id/et_change_pwd_check"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3_change"
            android:background="@drawable/bg_underline"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/ll2_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TextView
                android:text="手机    "
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:inputType="number"
                android:background="@null"
                android:id="@+id/et_change_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="TextFields" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_underline"
            android:id="@+id/ll4_change"
            android:orientation="horizontal"
            android:layout_below="@id/ll3_change"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TextView
                android:text="验证码   "
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:textSize="15sp"
                android:id="@+id/et_change_code"
                android:background="@null"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginBottom="5dp"
                android:id="@+id/btn_change_send_check_code"
                android:layout_marginLeft="10dp"
                android:text="发送验证码"
                android:textColor="#e26323"
                android:textSize="10sp"
                android:background="@drawable/bg_button_style1"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm_change_pwd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/ll4_change"
            android:background="@drawable/bg_button_style2"
            android:textColor="#fff"
            android:text="确认修改"

            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="36.8dp" />

    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
