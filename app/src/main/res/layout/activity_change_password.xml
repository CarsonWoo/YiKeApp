<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carson.yikeapp.Views.ChangePasswordActivity">

    <LinearLayout
        android:background="@drawable/bg_underline"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="15sp"
        android:id="@+id/ll1_change"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="28sp"
            android:text="请输入新密码    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_change_pwd"
            android:textSize="28sp"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15sp"
        android:id="@+id/ll2_change"
        android:orientation="horizontal"
        android:layout_below="@id/ll1_change"
        android:background="@drawable/bg_underline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="28sp"
            android:text="请再次输入    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="28sp"
            android:id="@+id/et_change_pwd_check"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3_change"
        android:background="@drawable/bg_underline"
        android:orientation="horizontal"
        android:layout_marginLeft="15sp"
        android:layout_below="@id/ll2_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="手机    "
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="28sp"
            android:inputType="number"
            android:background="@null"
            android:id="@+id/et_change_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_underline"
        android:id="@+id/ll4_change"
        android:orientation="horizontal"
        android:layout_below="@id/ll3_change"
        android:layout_marginLeft="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="验证码   "
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="28sp"
            android:id="@+id/et_change_code"
            android:background="@null"
            android:layout_width="300sp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_change_send_check_code"
            android:layout_marginLeft="10sp"
            android:text="发送验证码"
            android:textColor="#e26323"
            android:textSize="18sp"
            android:background="@drawable/bg_button_style1"
            android:layout_width="140sp"
            android:layout_height="50sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm_change_pwd"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_below="@id/ll4_change"
        android:background="@drawable/bg_button_style2"
        android:textColor="#fff"
        android:text="确认修改"
        android:textSize="28sp"
        android:layout_width="match_parent"
        android:layout_height="70sp" />

</RelativeLayout>
