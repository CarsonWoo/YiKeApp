<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carson.yikeapp.Views.LoginActivity">

    <TextView
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:text="登录义客"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_underline"
        android:orientation="horizontal"
        android:id="@+id/ll1_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="28sp"
            android:text="用户名   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="(店家/手机号)"
            android:background="@null"
            android:textSize="28sp"
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:background="@drawable/bg_underline"
        android:layout_below="@id/ll1_login"
        android:orientation="horizontal"
        android:id="@+id/ll2_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="密码    "
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="textPassword"
            android:textSize="28sp"
            android:background="@null"
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RadioButton
        android:textSize="25sp"
        android:layout_marginLeft="15sp"
        android:text="记住账号"
        android:layout_below="@id/ll2_login"
        android:id="@+id/rb_remember_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton
        android:textSize="25dp"
        android:text="记住密码"
        android:layout_below="@id/ll2_login"
        android:id="@+id/rb_remember_pwd"
        android:layout_toRightOf="@id/rb_remember_username"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:textColor="#e26352"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/rb_remember_username"
        android:textSize="28dp"
        android:background="@drawable/bg_button_style1"
        android:id="@+id/btn_login"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:clickable="true"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@id/btn_login"
        android:layout_alignStart="@id/btn_login"
        android:layout_below="@id/btn_login"
        android:text="忘记密码?"
        android:textColor="#e26323"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:clickable="true"
        android:layout_alignRight="@id/btn_login"
        android:layout_alignEnd="@id/btn_login"
        android:layout_below="@id/btn_login"
        android:id="@+id/tv_to_regis"
        android:text="新用户注册"
        android:textColor="#e26323"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
