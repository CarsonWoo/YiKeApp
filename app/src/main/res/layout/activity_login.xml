<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carson.yikeapp.Views.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_login"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#fff"
        android:theme="@style/AppTheme.NoActionBar"
        app:navigationIcon="@drawable/ic_back_black"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitle="返回">


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="@string/login_tab_title"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/bg_underline"
            android:orientation="horizontal"
            android:id="@+id/ll1_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TextView
                android:textSize="18sp"
                android:text="用户名   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="(店家/手机号)"
                android:background="@null"
                android:textSize="18sp"
                android:id="@+id/et_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_underline"
            android:layout_below="@id/ll1_login"
            android:orientation="horizontal"
            android:id="@+id/ll2_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TextView
                android:text="密码    "
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="textPassword"
                android:textSize="18sp"
                android:background="@null"
                android:id="@+id/et_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RadioButton
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="记住账号"
            android:layout_below="@id/ll2_login"
            android:id="@+id/rb_remember_username"
            android:layout_width="wrap_content"
            android:layout_height="20.8sp"
            android:layout_marginStart="10dp" />

        <RadioButton
            android:textSize="18sp"
            android:text="记住密码"
            android:layout_below="@id/ll2_login"
            android:id="@+id/rb_remember_pwd"
            android:layout_toRightOf="@id/rb_remember_username"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20.8dp"
            android:layout_toEndOf="@id/rb_remember_username"
            android:layout_marginStart="20dp" />

        <Button
            android:textColor="#e26323"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_below="@id/rb_remember_username"
            android:textSize="18sp"
            android:background="@drawable/bg_button_style1"
            android:id="@+id/btn_login"
            android:text="@string/login_chinese"
            android:layout_width="match_parent"
            android:layout_height="46.7dp" />

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/btn_login"
            android:layout_alignStart="@id/btn_login"
            android:layout_below="@id/btn_login"
            android:text="@string/forget_psw"
            android:textColor="#e26323"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:clickable="true"
            android:layout_alignRight="@id/btn_login"
            android:layout_alignEnd="@id/btn_login"
            android:layout_below="@id/btn_login"
            android:id="@+id/tv_to_regis"
            android:text="@string/new_user_register"
            android:textColor="#e26323"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
