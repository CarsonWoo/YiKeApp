<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="8dp"
            android:id="@+id/civ_search_user_item"
            app:srcCompat="@drawable/ic_loader"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <com.example.carson.yikeapp.Views.ArchRivalTextView
            android:id="@+id/artv_search_user_rv_item_name"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/civ_search_user_item"
            android:layout_marginLeft="12dp"
            android:textSize="18.6sp"
            android:hint="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/tv_search_user_rv_item_info"
            android:hint="text"
            android:layout_toRightOf="@id/civ_search_user_item"
            android:layout_below="@id/artv_search_user_rv_item_name"
            android:layout_marginLeft="13dp"
            android:textSize="14.6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

</android.support.v7.widget.CardView>