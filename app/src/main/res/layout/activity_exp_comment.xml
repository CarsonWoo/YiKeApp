<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.carson.yikeapp.Views.ExpCommentActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_exp_comment"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        app:title="评论"
        app:titleMarginStart="110dp"
        app:navigationIcon="@drawable/ic_back_black">

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_below="@id/toolbar_exp_comment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_exp_comment"
        android:layout_marginTop="5dp"
        android:layout_below="@id/toolbar_exp_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7" />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/et_exp_comment_text"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:hint="请输入内容"
                android:background="@drawable/bg_edittext_normal"
                android:layout_margin="3dp"
                android:layout_width="0dp"
                android:layout_weight="11"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_send_exp_comment"
                android:textColor="#f4dbdbdb"
                android:textSize="15.6sp"
                android:gravity="center"
                android:text="发布"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
