<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f5f3f3"
    tools:context="com.example.carson.yikeapp.Views.PublishDiaryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_publish_diary"
        app:navigationIcon="@drawable/ic_chevron_left"
        android:background="@android:color/white"
        app:title="日记"
        app:titleMarginStart="105dp"
        android:layout_width="match_parent"
        android:layout_height="39dp">

        <Button
            android:id="@+id/btn_diary_post_send"
            android:layout_marginLeft="87dp"
            android:background="@android:color/white"
            android:text="发送"
            android:textColor="#e26323"
            android:textSize="17.6sp"
            android:layout_width="65dp"
            android:layout_height="35.6dp" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="41.5dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <EditText
            android:hint="写下你经历过的点点滴滴~"
            android:id="@+id/et_diary_post_text"
            android:textSize="18sp"
            android:layout_margin="15dp"
            android:background="@android:color/white"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="start" />

        <ImageView
            android:background="#f2f1f1"
            app:srcCompat="@drawable/ic_add"
            android:id="@+id/iv_diary_post_photo"
            android:layout_marginLeft="15dp"
            android:layout_width="105dp"
            android:layout_height="130dp" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
