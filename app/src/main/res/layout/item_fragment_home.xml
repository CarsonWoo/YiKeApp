<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bnb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textSize="16.3sp"
            android:text="00000"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:textSize="13.7sp"
            android:id="@+id/bnb_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="00000"
            android:textColor="#999999"
            android:textAppearance="?attr/textAppearanceListItem" />

        <Button
            android:id="@+id/bnb_location"
            android:layout_width="wrap_content"
            android:layout_height="16.3dp"
            android:background="@drawable/bg_bnb_loca"
            android:text="云南"
            android:textColor="@color/bg_bnb_loca"
            android:textSize="9.3sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/bnb_host"
            android:text="xxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/text_margin"
            android:textSize="16.3sp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/bnb_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="15"
            android:layout_margin="4dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#999999"
            android:textSize="13.7sp" />

    </LinearLayout>

</RelativeLayout>
