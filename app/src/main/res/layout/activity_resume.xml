<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carson.yikeapp.Views.ResumeActivity">

    <android.support.v7.widget.Toolbar
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar_resume"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#fff"
        android:theme="@style/AppTheme.NoActionBar"
        app:navigationIcon="@drawable/ic_chevron_left"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/toolbar_resume"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:text="姓名:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_resume_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/tv_name_title"
                android:text="xxx"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_gender_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_toLeftOf="@+id/tv_resume_gender"
                android:text="性别:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_resume_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:layout_marginTop="20dp"
                android:text="xxx"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_title"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_underline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话    "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_resume_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:freezesText="true"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_underline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信号    "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_resume_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="text"
                    android:layout_marginRight="10dp"
                    android:freezesText="true"
                    android:maxLines="1"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_underline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱    "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_resume_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:freezesText="true"
                    android:layout_marginRight="10dp"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout3"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_underline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在城市    "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_resume_city"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:freezesText="true"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout4"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_underline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生年月    "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_resume_birth"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:background="@null"
                    android:inputType="date"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout5"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_underline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人    "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_resume_emergency_contact"
                    android:layout_width="match_parent"
                    android:freezesText="true"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:inputType="textPersonName"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout6"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_underline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人手机    "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_resume_emergency_phone"
                    android:layout_width="match_parent"
                    android:freezesText="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="phone"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/linearLayout8"
                android:layout_below="@id/linearLayout7"
                android:layout_width="match_parent"
                android:background="@drawable/bg_underline"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:text="工作状况"
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:layout_marginLeft="15dp"
                    android:id="@+id/rg_resume"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:textSize="18sp"
                        android:id="@+id/rb_stu"
                        android:text="在读"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:textSize="18sp"
                        android:id="@+id/rb_not_stu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="非在读" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout8"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_underline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="技能    "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_resume_skills"
                    android:layout_width="match_parent"
                    android:freezesText="true"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:inputType="text"
                    android:textSize="18sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout9"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_intro_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人简介    "
                    android:textSize="18sp" />

                <EditText
                    android:gravity="start"
                    android:layout_toRightOf="@+id/tv_intro_title"
                    android:id="@+id/et_resume_intro"
                    android:layout_width="match_parent"
                    android:freezesText="true"
                    android:layout_height="150dp"
                    android:layout_marginRight="10dp"
                    android:inputType="textMultiLine"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout10"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_exp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="义工旅行\n或其他\n旅行经历    "
                    android:textSize="18sp" />

                <EditText
                    android:gravity="start"
                    android:layout_toRightOf="@+id/tv_exp_title"
                    android:id="@+id/et_resume_experience"
                    android:layout_width="match_parent"
                    android:freezesText="true"
                    android:layout_height="150dp"
                    android:inputType="textMultiLine"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/linearLayout12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout11"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/tv_thought_title"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对义工旅行\n的想法    "
                    android:textSize="18sp" />

                <EditText
                    android:layout_toRightOf="@+id/tv_thought_title"
                    android:scrollbars="none"
                    android:gravity="start"
                    android:id="@+id/et_resume_thought"
                    android:layout_width="match_parent"
                    android:freezesText="true"
                    android:layout_height="150dp"
                    android:inputType="textMultiLine"
                    android:textSize="18sp" />

            </RelativeLayout>

            <Button
                android:layout_marginTop="25dp"
                android:layout_below="@+id/linearLayout12"
                android:id="@+id/btn_resume_save"
                android:text="保存"
                android:textSize="18sp"
                android:elevation="10dp"
                android:layout_marginBottom="25dp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_style2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
