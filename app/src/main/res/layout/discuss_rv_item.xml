<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="5sp"
        android:text="非985、211的本二学生怎样才能尽快提升自己并去英国留学？"
        android:textSize="32sp"
        android:textColor="#000"
        android:id="@+id/tv_discuss_rv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_discuss_rv_item_content"
        android:textSize="26sp"
        android:text="你需要根据你自身的情况才能做进一步的选择和规划。虽然你的学校优势不大，但可以通过gpa"
        android:layout_below="@id/tv_discuss_rv_item_title"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_discuss_rv_item_tag"
        android:textSize="20sp"
        android:textColor="#e26232"
        android:text="美国"
        android:background="@drawable/bg_button_style1"
        android:layout_marginTop="10sp"
        android:layout_below="@id/tv_discuss_rv_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_discuss_rv_item_date"
        android:layout_below="@id/tv_discuss_rv_item_content"
        android:layout_marginTop="18sp"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        android:text="2017.08.09"
        android:layout_toRightOf="@id/btn_discuss_rv_item_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20sp"
        android:layout_marginTop="18sp"
        android:layout_below="@id/tv_discuss_rv_item_content"
        android:layout_marginLeft="30sp"
        android:layout_toRightOf="@id/tv_discuss_rv_item_date"
        android:id="@+id/tv_discuss_rv_item_likes"
        android:text="2367赞"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>