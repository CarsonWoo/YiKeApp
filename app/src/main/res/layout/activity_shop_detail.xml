<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carson.yikeapp.Views.ShopDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            app:layout_scrollFlags="enterAlways"
            android:background="#fff"
            android:id="@+id/toolbar_detail_shop"
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/ic_back"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:textSize="26sp"
                android:text="返回"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:text="填写商家资料"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15sp"
                android:orientation="horizontal"
                android:layout_marginLeft="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="28sp"
                    android:text="头像"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:clickable="true"
                    android:src="#fff"
                    android:id="@+id/civ_detail_change_shop"
                    android:layout_width="120sp"
                    android:layout_marginLeft="380sp"
                    android:background="@drawable/bg_circle_image"
                    android:layout_height="120sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <LinearLayout
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="性别"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textAlignment="viewEnd"
                    android:focusable="false"
                    android:inputType="none"
                    android:id="@+id/et_gender_shop"
                    android:textColor="#e26323"
                    android:textSize="28sp"
                    android:layout_marginLeft="355sp"
                    android:background="@null"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <LinearLayout
                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="28sp"
                    android:text="真实姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColor="#e26323"
                    android:id="@+id/et_true_name_shop"
                    android:layout_marginLeft="250sp"
                    android:textAlignment="viewEnd"
                    android:background="@null"
                    android:textSize="28sp"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <LinearLayout
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="身份证号"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textAlignment="viewEnd"
                    android:id="@+id/et_id_card_shop"
                    android:textColor="#e26323"
                    android:layout_marginLeft="150sp"
                    android:background="@null"
                    android:textSize="28sp"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <LinearLayout
                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="28sp"
                    android:text="出生年月"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_birth_shop"
                    android:textColor="#e26323"
                    android:textAlignment="viewEnd"
                    android:layout_marginLeft="250sp"
                    android:textSize="28sp"
                    android:background="@null"
                    android:inputType="none"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <LinearLayout
                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="28sp"
                    android:text="意向地区"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="none"
                    android:id="@+id/et_area_shop"
                    android:background="@null"
                    android:textSize="28sp"
                    android:textColor="#e26323"
                    android:textAlignment="viewEnd"
                    android:layout_marginLeft="250sp"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15sp"
                android:background="#ede2dede"
                android:layout_width="match_parent"
                android:layout_height="20sp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="25sp"
                android:layout_width="match_parent"
                android:layout_height="150sp">

                <TextView
                    android:textSize="35sp"
                    android:text="个人简介"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_introduction_shop"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="15sp"
                    android:textSize="26sp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="70sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15sp"
                android:background="#ede2dede"
                android:layout_width="match_parent"
                android:layout_height="20sp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="180sp">

                <TextView
                    android:textSize="35sp"
                    android:text="添加民宿相关图片"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:textColor="#e26323"
                    android:layout_marginLeft="5sp"
                    android:id="@+id/btn_add_photo_detail_shop"
                    android:layout_marginRight="16sp"
                    android:layout_marginTop="18sp"
                    android:textSize="45sp"
                    android:text="+"
                    android:background="@drawable/bg_button_style1"
                    android:layout_width="match_parent"
                    android:layout_height="60sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15sp"
                android:background="#ede2dede"
                android:layout_width="match_parent"
                android:layout_height="20sp"/>

            <LinearLayout
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="90sp">

                <Button
                    android:layout_marginTop="15sp"
                    android:id="@+id/btn_detail_shop_save"
                    android:layout_marginLeft="75sp"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:text="保存"
                    android:background="@drawable/bg_button_style2"
                    android:layout_width="180sp"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginTop="15sp"
                    android:id="@+id/btn_detail_shop_cancel"
                    android:layout_marginLeft="65sp"
                    android:textSize="25sp"
                    android:background="@drawable/bg_button_style3"
                    android:text="取消"
                    android:layout_width="180sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
