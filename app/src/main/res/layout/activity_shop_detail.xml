<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carson.yikeapp.Views.ShopDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            app:layout_scrollFlags="enterAlways"
            android:background="#fff"
            android:id="@+id/toolbar_detail_shop"
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/ic_back_black"
            android:layout_height="39dp"
            app:title="返回">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:text="填写民宿相关资料"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="头像"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:clickable="true"
                    android:src="#fff"
                    android:id="@+id/civ_detail_change_shop"
                    android:layout_width="80dp"
                    android:layout_marginLeft="220dp"
                    android:layout_height="80dp"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="性别"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textAlignment="viewEnd"
                    android:focusable="false"
                    android:inputType="none"
                    android:id="@+id/et_gender_shop"
                    android:textColor="#e26323"
                    android:textSize="18sp"
                    android:layout_marginLeft="180dp"
                    android:background="@null"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="真实姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColor="#e26323"
                    android:id="@+id/et_true_name_shop"
                    android:layout_marginLeft="85dp"
                    android:textAlignment="viewEnd"
                    android:background="@null"
                    android:textSize="18sp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="身份证号"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textAlignment="viewEnd"
                    android:id="@+id/et_id_card_shop"
                    android:textColor="#e26323"
                    android:layout_marginLeft="80dp"
                    android:background="@null"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="80dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="出生年月"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_birth_shop"
                    android:textColor="#e26323"
                    android:textAlignment="viewEnd"
                    android:layout_marginLeft="115sp"
                    android:textSize="18sp"
                    android:background="@null"
                    android:inputType="none"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#868282"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="意向地区"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="none"
                    android:id="@+id/et_area_shop"
                    android:background="@null"
                    android:textSize="18sp"
                    android:textColor="#e26323"
                    android:textAlignment="viewEnd"
                    android:layout_marginLeft="145dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:background="#ede2dede"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:textSize="22sp"
                    android:text="民宿简介"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:ellipsize="end"
                    android:id="@+id/et_introduction_shop"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="12dp"
                    android:textSize="18sp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:background="#ede2dede"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:textSize="18sp"
                    android:text="添加民宿相关图片"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:textColor="#e26323"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_add_photo_detail_shop"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:text="+"
                    android:background="@drawable/bg_button_style1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:background="#ede2dede"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_detail_shop_save"
                    android:layout_marginLeft="28dp"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:text="保存"
                    android:background="@drawable/bg_button_style2"
                    android:layout_width="120dp"
                    android:layout_height="35.6dp" />

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_detail_shop_cancel"
                    android:layout_marginLeft="45dp"
                    android:textSize="15sp"
                    android:background="@drawable/bg_button_style3"
                    android:text="取消"
                    android:layout_width="120dp"
                    android:layout_height="35.6dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
