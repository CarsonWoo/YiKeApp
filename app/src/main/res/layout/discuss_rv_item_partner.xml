<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_discuss_rv_item_part_head"
        android:src="@mipmap/ic_launcher"
        android:layout_width="75sp"
        android:layout_height="75sp" />

    <com.example.carson.yikeapp.Views.ArchRivalTextView
        android:layout_marginLeft="20sp"
        android:layout_toRightOf="@id/civ_discuss_rv_item_part_head"
        android:hint="username"
        android:textColor="#000"
        android:id="@+id/artv_discuss_rv_item_part_name"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/civ_discuss_rv_item_part_head" />

    <ImageView
        android:id="@+id/iv_discuss_rv_item_like"
        android:layout_marginLeft="320sp"
        android:layout_toRightOf="@id/artv_discuss_rv_item_part_name"
        android:src="@drawable/ic_unlike"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="320sp"
        android:layout_toEndOf="@id/artv_discuss_rv_item_part_name" />
    
    <TextView
        android:layout_marginTop="10sp"
        android:maxLines="2"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        android:layout_toRightOf="@id/civ_discuss_rv_item_part_head"
        android:layout_below="@id/artv_discuss_rv_item_part_name"
        android:id="@+id/tv_discuss_rv_item_part_comment"
        android:layout_width="400sp"
        android:hint="#haha# I come from Guangzhou!"
        android:layout_height="60sp" />

    <TextView
        android:layout_marginLeft="20sp"
        android:layout_toRightOf="@id/civ_discuss_rv_item_part_head"
        android:layout_below="@id/tv_discuss_rv_item_part_comment"
        android:textColor="#000"
        android:textSize="20sp"
        android:hint="134浏览"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_discuss_rv_item_part_view"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/civ_discuss_rv_item_part_head" />

    <TextView
        android:layout_marginLeft="330sp"
        android:hint="17回复"
        android:layout_toRightOf="@id/tv_discuss_rv_item_part_view"
        android:layout_below="@id/tv_discuss_rv_item_part_comment"
        android:textSize="20sp"
        android:id="@+id/tv_discuss_rv_item_part_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="#31262525"
        android:layout_marginTop="20sp"
        android:layout_below="@id/tv_discuss_rv_item_part_view"
        android:layout_toRightOf="@id/civ_discuss_rv_item_part_head"
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="1sp"></LinearLayout>

</RelativeLayout>