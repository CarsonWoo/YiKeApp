<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.carson.yikeapp.Views.Discuss.PublishRecruitment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:elevation="0dp"
        android:background="@android:color/white">

        <android.support.design.widget.CollapsingToolbarLayout
            app:layout_scrollFlags="scroll|enterAlways"
            app:contentScrim="@color/bg_bnb_loca"
            app:collapsedTitleGravity="center"
            app:collapsedTitleTextAppearance="@android:color/darker_gray"
            app:title="店家招募"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                app:layout_collapseMode="parallax"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_back_pub_recruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_back_black"/>
                <TextView
                    android:id="@+id/pub_recruitment"
                    android:text="发布"
                    android:layout_gravity=""
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp" />
            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_container"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/bg_bnb_loca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_margin="15dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--TODO need to set height = 0dp and reset it 180dp in dynamic way-->
                        <com.example.carson.yikeapp.Views.RoundRectImg
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/logo"
                            app:radius="30" />

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                            <TextView
                                android:textSize="18sp"
                                android:textColor="@color/bg_bnb_loca"
                                android:text=" 店名："
                                android:drawableLeft="@drawable/ic_home_selected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/et_recruit_name"
                                android:layout_marginEnd="5dp"
                                android:hint="请输入店名"
                                android:textColorHint="#6fff6000"
                                android:textAlignment="viewEnd"
                                android:background="@android:color/white"
                                android:textSize="18sp"
                                android:textColor="#6fff6600"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginRight="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:textSize="18sp"
                                android:text=" 位置："
                                android:drawableLeft="@drawable/ic_location"
                                android:textColor="@color/bg_bnb_loca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/et_recruit_location"
                                android:layout_marginEnd="5dp"
                                android:background="@android:color/white"
                                android:hint="请输入具体位置"
                                android:textAlignment="viewEnd"
                                android:textColorHint="#6fff6000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginRight="5dp" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_recruit_number"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp">

                <TextView
                    android:textSize="18sp"
                    android:text="招募人数"
                    android:textColor="@color/bg_bnb_loca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_recruit_number"
                        android:background="@android:color/white"
                        android:gravity="end"
                        android:textAlignment="viewEnd"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="人"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/ll_recruit_date"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginStart="15dp">

                <TextView
                    android:textColor="@color/bg_bnb_loca"
                    android:text="招募时间"
                    android:textSize="18sp"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:hint="请选择开始时间"
                    android:id="@+id/tv_recruit_date"
                    android:textSize="18sp"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end" />

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/ll_recruit_last"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="招募时长"
                    android:textColor="@color/bg_bnb_loca"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_recruit_last"
                        android:textAlignment="viewEnd"
                        android:background="@android:color/white"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="end" />

                    <TextView
                        android:textColor="@android:color/black"
                        android:text="天"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginStart="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/bg_bnb_loca"
                    android:text="工作内容"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_recruit_work"
                    android:layout_margin="8dp"
                    android:hint="请写下本次活动需要进行的工作"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/shape_rect_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/bg_bnb_loca"
                    android:text="义工要求"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_recruit_requirement"
                    android:background="@drawable/shape_rect_gray"
                    android:hint="请写下对招应聘义工的要求"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textAlignment="viewStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/bg_bnb_loca"
                    android:text="民宿简介"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_recruit_introduction"
                    android:background="@drawable/shape_rect_gray"
                    android:hint="请简要概述该民宿的住宿条件"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textAlignment="viewStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/bg_bnb_loca"
                    android:text="其他备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_recruit_other"
                    android:background="@drawable/shape_rect_gray"
                    android:hint="补充事项"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textAlignment="viewStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        app:layout_anchor="@id/nested_container"
        app:layout_anchorGravity="right|bottom"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/ic_add_white"
        app:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.design.widget.CoordinatorLayout>
