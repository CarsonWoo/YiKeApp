<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_search_rv_item_type"
            android:textColor="#e26323"
            android:hint="类型"
            android:textSize="15.6sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_search_rv_item_content"
            android:layout_below="@id/tv_search_rv_item_type"
            android:layout_marginTop="10dp"
            android:textSize="13.6sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15dp"
            android:hint="text"
            android:layout_width="240dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:background="#f2f2f2"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_search_rv_item_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/civ_search_rv_item"
                android:layout_gravity="center_vertical"
                android:src="#e2e2e2"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <com.example.carson.yikeapp.Views.ArchRivalTextView
                android:id="@+id/artv_search_rv_item_name"
                android:layout_marginLeft="8dp"
                android:hint="username"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.example.carson.yikeapp.Views.ArchRivalTextView
            android:id="@+id/artv_search_rv_item_time"
            android:hint="2018.3.7"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</android.support.v7.widget.CardView>