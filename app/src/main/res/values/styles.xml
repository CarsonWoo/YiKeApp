<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#ff6600</item>
    </style>

    <style name="register_toolbar_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:layout_gravity">center_horizontal</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#ff6600</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorPrimary
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.Design.Light.NoActionBar" >
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#ff6600</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorPrimary
        </item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">#ff6600</item>
    </style>

    //透明activity背景
    <style name="TransparentTheme" parent="MainTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="window_menu_in_and_out_style">
        <item name="android:windowEnterAnimation">@anim/ani_top_get_into</item>
        <item name="android:windowExitAnimation">@anim/ani_top_sign_out</item>
    </style>

</resources>
